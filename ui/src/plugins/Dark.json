{
  "meta": {
    "docsUrl": "https://v2.quasar.dev/quasar-plugins/dark"
  },

  "injection": "$q.dark",

  "props": {
    "isActive": {
      "type": "Boolean",
      "desc": "黑暗模式是否激活？",
      "reactive": true
    },

    "mode": {
      "type": [ "Boolean", "String" ],
      "desc": "黑暗模式配置（不是状态）。",
      "values": [ "auto", "(Boolean) true", "(Boolean) false" ],
      "reactive": true
    }
  },

  "methods": {
    "set": {
      "desc": "设置黑暗模式状态",
      "params": {
        "status": {
          "type": [ "Boolean", "String" ],
          "desc": "黑暗模式状态",
          "values": [ "(Boolean) true", "(Boolean) false", "auto" ],
          "required": true
        }
      }
    },

    "toggle": {
      "desc": "切换黑暗模式状态"
    }
  }
}
