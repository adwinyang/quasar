{
  "mixins": [ "components/page-sticky/QPageSticky" ],

  "meta": {
    "docsUrl": "https://v2.quasar.dev/layout/page-scroller"
  },

  "props": {
    "scroll-offset": {
      "type": "Number",
      "desc": "组件在页面上显示的滚动偏移（像素）；从页面顶部开始测量（如果是 '反向(reverse)' 模式，则从底部开始）。",
      "default": 1000,
      "examples": [ 550 ],
      "category": "behavior"
    },

    "reverse": {
      "type": "Boolean",
      "desc": "反向工作（滚动到页面顶部时显示，触发后滚动到底部）。",
      "category": "behavior"
    },

    "duration": {
      "type": "Number",
      "desc": "滚动的持续时间（以毫秒为单位），直到它到达目标。",
      "default": 300,
      "examples": [ 500 ],
      "category": "behavior"
    },

    "offset": {
      "default": [ 18, 18 ],
      "category": "content"
    }
  }
}
