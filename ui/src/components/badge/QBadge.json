{
  "meta": {
    "docsUrl": "https://v2.quasar.dev/vue-components/badge"
  },

  "props": {
    "color": {
      "extends": "color"
    },

    "text-color": {
      "extends": "text-color"
    },

    "floating": {
      "type": "Boolean",
      "desc": "告诉QBadge是否应该浮动到相对位置的父元素的右上方。",
      "category": "content"
    },

    "transparent": {
      "type": "Boolean",
      "desc": "应用0.8的不透明度；特别是对浮动的QBadge有用。",
      "category": "style"
    },

    "multi-line": {
      "type": "Boolean",
      "desc": "内容可以包裹到多行",
      "category": "content"
    },

    "label": {
      "type": [ "String", "Number" ],
      "desc": "徽章的内容为字符串；如果指定的话，将覆盖默认插槽。",
      "examples": [ "John Doe", 22 ],
      "category": "content"
    },

    "align": {
      "type": "String",
      "desc": "设置垂直对齐的CSS属性",
      "values": [ "top", "middle", "bottom" ],
      "category": "content"
    },

    "outline": {
      "type": "Boolean",
      "desc": "使用 'outline'(大纲)设计（仅有彩色文本和边框）。",
      "category": "style"
    },

    "rounded": {
      "type": "Boolean",
      "desc": "做出一个圆形的徽章",
      "category": "style"
    }
  },

  "slots": {
    "default": {
      "desc": "如果不使用 'label'(属性)，这是QBadge内容的位置。"
    }
  }
}
