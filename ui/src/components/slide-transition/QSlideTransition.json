{
  "meta": {
    "docsUrl": "https://v2.quasar.dev/vue-components/slide-transition"
  },

  "props": {
    "appear": {
      "type": "Boolean",
      "desc": "如果设置为 'true'，过渡将在初始渲染时应用。",
      "category": "behavior"
    },

    "duration": {
      "type": "Number",
      "desc": "启用动画滚动的持续时间（以毫秒计）。",
      "default": 300,
      "examples": [ 500, ":duration=\"500\"" ],
      "category": "behavior"
    }
  },

  "slots": {
    "default": {
      "desc": "这就是内容的去处"
    }
  },

  "events": {
    "show": {
      "extends": "after-show"
    },

    "hide": {
      "extends": "after-hide"
    }
  }
}
