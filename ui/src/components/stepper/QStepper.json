{
  "mixins": [ "composables/private/use-panel" ],

  "meta": {
    "docsUrl": "https://v2.quasar.dev/vue-components/stepper"
  },

  "props": {
    "dark": {
      "extends": "dark"
    },

    "flat": {
      "extends": "flat"
    },

    "bordered": {
      "extends": "bordered"
    },

    "vertical": {
      "type": "Boolean",
      "desc": "将步进器置于垂直模式（而不是默认的水平模式）。",
      "category": "behavior"
    },

    "alternative-labels": {
      "type": "Boolean",
      "desc": "使用替代标签 - 将图标堆叠在标签之上（仅适用于水平步进器）。",
      "category": "header"
    },

    "header-nav": {
      "type": "Boolean",
      "desc": "允许通过页眉进行导航",
      "category": "behavior"
    },

    "contracted": {
      "type": "Boolean",
      "desc": "在狭窄的窗口上隐藏页眉标签",
      "category": "header|behavior"
    },

    "inactive-icon": {
      "extends": "icon",
      "category": "header"
    },

    "inactive-color": {
      "extends": "color",
      "category": "header"
    },

    "done-icon": {
      "extends": "icon",
      "category": "header"
    },

    "done-color": {
      "extends": "color",
      "category": "header"
    },

    "active-icon": {
      "extends": "icon",
      "category": "header"
    },

    "active-color": {
      "extends": "color",
      "category": "header"
    },

    "error-icon": {
      "extends": "icon",
      "category": "header"
    },

    "error-color": {
      "extends": "color",
      "category": "header"
    },

    "header-class": {
      "type": "String",
      "desc": "归属到页眉的类定义",
      "examples": [
        "my-special-class"
      ],
      "category": "style"
    }
  },

  "slots": {
    "default": {
      "desc": "建议：QStep"
    },

    "navigation": {
      "desc": "全局导航的具体插槽位；建议：QStepperNavigation"
    },

    "message": {
      "desc": "专门用于在每个步骤（如果是水平步进）或步骤（如果是垂直步进）上方放置信息的插槽；建议：QBanner, div.q-pa-lg"
    }
  }
}
